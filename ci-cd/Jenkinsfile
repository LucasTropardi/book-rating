pipeline {
  agent any

  environment {
    MAVEN_OPTS = "-Dmaven.repo.local=.m2/repository"
  }

  stages {
    stage('Build Microservices') {
      parallel {
        stage('Build auth-service') {
          steps {
            dir('auth') {
              sh 'chmod +x mvnw'
              sh './mvnw clean package -DskipTests'
            }
          }
        }
        stage('Build user-service') {
          steps {
            dir('user') {
              sh 'chmod +x mvnw'
              sh './mvnw clean package -DskipTests'
            }
          }
        }
        stage('Build review-service') {
          steps {
            dir('review') {
              sh 'chmod +x mvnw'
              sh './mvnw clean package -DskipTests'
            }
          }
        }
        stage('Build book-service') {
          steps {
            dir('book') {
              sh 'npm install'
              sh 'npm run build'
            }
          }
        }
      }
    }

    stage('Build Frontend') {
      steps {
        dir('frontend') {
          sh 'npm install'
          sh 'npm run build'
        }
      }
    }
  }

  post {
    success {
      echo 'Build conclu√≠do com sucesso.'
    }
    failure {
      echo 'Ocorreu um erro no build.'
    }
  }
}
